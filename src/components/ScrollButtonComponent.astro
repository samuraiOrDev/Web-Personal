<button
  class="scroll-button bg-main flex items-center justify-center text-gray-900"
  ><svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width={1.5}
    stroke="currentColor"
    class="w-12 h-12"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M15 11.25l-3-3m0 0l-3 3m3-3v7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    ></path>
  </svg>
</button>
<div class="bg-main bar-scroll"></div>
<style>
  .scroll-button {
    display: none;
    border: none;
    position: fixed;
    bottom: 0;
    right: 0;
    border-top-left-radius: 20px;
    cursor: pointer;
    z-index: 1;
  }

  .bar-scroll {
    display: none;
    height: 10px;
    width: 100%;
    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 0;
  }
</style>
<script>
  document.addEventListener("astro:page-load", () => {
    const scrollButton = document.querySelector(
      ".scroll-button",
    ) as HTMLElement;
    const barScroll = document.querySelector(".bar-scroll") as HTMLElement;
    const toggleScrollButtonVisibility = () => {
      const shouldShow = window.scrollY > 40;
      if (window.innerWidth < 1024) {
        scrollButton.style.display = shouldShow ? "block" : "none";
        barScroll.style.display = shouldShow ? "block" : "none";
      } else {
        scrollButton.style.display = shouldShow ? "block" : "none";
      }
    };

    scrollButton?.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
    window.onscroll = toggleScrollButtonVisibility;
  });
</script>
