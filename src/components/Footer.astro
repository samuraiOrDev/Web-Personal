---
import GitHub from "./Svg/GitHub.astro";
import Linkedin from "./Svg/Linkedin.astro";
import Email from "./Svg/Email.astro";

const socialLinks = [
  {
    title: "Linkedin",
    url: "https://www.linkedin.com/in/v%C3%ADctor-manuel-ordiales-garc%C3%ADa/",
    target: "_blank",
    component: Linkedin,
  },
  {
    title: "GitHub",
    url: "https://github.com/samuraiOrDev",
    target: "_blank",
    component: GitHub,
  },
  {
    title: "Email",
    url: "mailto:samurai.dev.ordiales@gmail.com",
    target: "_blank",
    component: Email,
  },
];
---

<footer
  class="w-full p-6 flex justify-center items-cente border-t-yellow-600 border-b-yellow-600 border-t-2 border-b-2"
>
  <div
    class="w-full flex justify-between md:items-start items-center md:flex-row flex-col xl:max-w-[1280px]"
  >
    {
      socialLinks.length > 0 && (
        <div class="flex flex-wrap gap-x-4 gap-y-1 md:mb-0 mb-7">
          {socialLinks.map(({ url, target, title, component: Icon }) => (
            <a
              class="inline-flex items-center justify-center text-sm hover:text-primary transition ease-out duration-300"
              href={url}
              target={target}
              title={title}
              rel="noopener noreferer"
            >
              <Icon size={30} />
            </a>
          ))}
        </div>
      )
    }
    <!-- Copy  -->
    <p
      class="xs:leading-[22px] leading-[20px] font-bold md:text-left text-center"
    >
      &copy; {new Date().getFullYear()}&nbsp; Víctor Manuel Ordiales García
    </p>
  </div>
</footer>
