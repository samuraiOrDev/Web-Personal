---
import { aboutSection } from "../../data/siteConfig";
import ElementH2 from "../ui/ElementH2.astro";
import ElementP from "../ui/ElementP.astro";
---

<section
  id="about-section"
  class="flex justify-center items-center gap-5 mx-auto xl:max-w-[1280px] w-full flex-col sm:px-16 px-6 sm:pb-16 xs:pb-8 pb-12 sm:pt-6 mt-[40px] overflow-x-hidden"
>
  <ElementH2
    mainTitle={aboutSection.title}
    mainTitleTail={aboutSection.subTitle}
    lineBreak
  />
  {
    aboutSection.parrafos.map((parrafo, index) => (
      <ElementP description={parrafo} />
    ))
  }
</section>
